extends layout

block content
  section.hero.is-light.is-fullheight
    .hero-head
      header.navbar
        .container
          .navbar-brand
            span.navbar-burger.burger(data-target='navbarMenuHeroC')
              span
              span
              span
          #navbarMenuHeroC.navbar-menu
            .navbar-end
              span.navbar-item
                a.button.is-light.is-inverted(href='https://github.com/threevanny/arduino-http-request-web-client' target='_blank')
                  span.icon
                    i.fas.fa-file-code
                  span Código
              span.navbar-item
                a.button.is-light.is-inverted(href='https://www.tinkercad.com/things/azuH4bE9SuU' target='_blank')
                  span.icon
                    i.fas.fa-microchip
                  span Circuíto
              span.navbar-item
                a.button.is-light.is-inverted(href='https://drive.google.com/file/d/1OI8Oxo6i9GYtzxne2JYTmyQZzl1rVU0X/view?usp=sharing' target='_blank')
                  span.icon
                    i.fas.fa-file-alt
                  span Informe
    .hero-body
      .container.has-text-centered
        main
        .columns
          .column
            button.button.is-light.is-inverted.is-active.mb-5
              span.icon
                i.fas.fa-clock
              #clock.clock(onload='startClock();')
            .columns 
              .column.is-6
                .box
                  i.fas.fa-sun
                  h2 Temperatura
                  h1.title#temperature 0°
                  #tagTemperature
              .column.is-6
                .box
                  i.fas.fa-lightbulb 
                  h2 Iluminación
                  h1.title#illumination 0
                  #tagIllumination



    .hero-foot
      .tabs.is-boxed.is-fullwidth
        .container.has-text-centered
          p
